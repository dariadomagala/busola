{
  "$schema": "http://json-schema.org/draft-07/schema",
  "description": "Schema defining structure of details configuration",
  "required": [
    "header",
    "body"
  ],
  "title": "Custom pages to be displayed in Busola",
  "type": "object",
  "properties": {
    "body": {
      "description": "Configuration of fields/data that should be displayed in body section of resource details page.",
      "$ref": "#/definitions/component_array_or_object"
    },
    "header": {
      "description": "Configuration of fields/data that should be displayed in header section of resource details page.",
      "$ref": "#/definitions/component_array_or_object"
    }
  },
  "definitions": {
    "component_config": {
      "type": "object",
      "properties": {
        "additionalProperties": {
          "type": "string"
        },
        "name": {
          "description": "Name of component used for dispaying translations",
          "type": "string"
        },
        "path": {
          "description": "The path to the resource variable",
          "examples": [
            "status.phase",
            "metadata.labels"
          ],
          "type": "string"
        },
        "widget": {
          "description": "Name of a widget that should be used for displaying data defined by path",
          "examples": [
            "Badge",
            "CodeViewer"
          ],
          "type": "string"
        }
      }
    },
    "component_array_or_object": {
      "anyOf": [
        {
          "type": "object",
          "oneOf": [
            {
              "required": [
                "path"
              ],
              "not": {
                "required": [
                  "name"
                ]
              }
            },
            {
              "required": [
                "name"
              ],
              "not": {
                "required": [
                  "path"
                ]
              }
            },
            {
              "required": [
                "name",
                "path"
              ]
            }
          ],
          "anyOf": [
            {
              "$ref": "#/definitions/component_config"
            },
            {
              "properties": {
                "children ": {
                  "type": "object",
                  "allOf": [
                    {
                      "$ref": "#/definitions/component_config"
                    }
                  ]
                }
              }
            }
          ]
        },
        {
          "type": "array",
          "items": {
            "type": "object",
            "oneOf": [
              {
                "required": [
                  "path"
                ],
                "not": {
                  "required": [
                    "name"
                  ]
                }
              },
              {
                "required": [
                  "name"
                ],
                "not": {
                  "required": [
                    "path"
                  ]
                }
              },
              {
                "required": [
                  "name",
                  "path"
                ]
              }
            ],
            "anyOf": [
              {
                "$ref": "#/definitions/component_config"
              },
              {
                "properties": {
                  "children ": {
                    "type": "object",
                    "allOf": [
                      {
                        "$ref": "#/definitions/component_config"
                      }
                    ]
                  }
                }
              }
            ]
          }
        }
      ]
    }
  }
}